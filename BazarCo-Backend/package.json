{
  "name": "bazarco-backend",
  "version": "1.0.0",
  "description": "BazarCo API backend - TypeScript Express",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "start:ts": "tsx src/server.ts"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "express",
    "typescript",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^4.21.0",
    "mongoose": "^8.8.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^8.0.1",
    "swagger-ui-express": "^5.0.1",
    "tsx": "^4.19.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^22.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.11",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.0.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.0.0"
  }
}
